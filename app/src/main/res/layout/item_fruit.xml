    android:layout_height="wrap_content"
    android:layout_margin="@dimen/bga_pp_size_level1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/first_code_fruit_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bga_refresh_mt_refreshing_04"
        />

    <TextView
        android:id="@+id/first_code_fruit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/middle" />
</LinearLayout>